from scrapy.item import Field
from scrapy.item import Item
from scrapy.spiders import Spider
from scrapy.selector import Selector
from scrapy.loader import ItemLoader
from bs4 import BeautifulSoup

class Nacional(Item):
    titular = Field()
    descripcion = Field()

class BioBioSpider(Spider):
    name = "diariofinanciero"
    custom_settings = {
        'USER_AGENT' : 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/102.0.5005.63 Safari/537.36'
    }
    start_urls = ['https://www.eluniverso.com/deportes']

    def parse(self, response ):
        sel = Selector(response)
        noticias = sel.xpath('//div[@class="cfeed_|_divide-y_relative"]/div[@class="relative"]')
        for noticia in noticias:
            item = ItemLoader(Nacional(), noticia)
            item.add_xpath('titular', './/h2/a/text()')
            item.add_xpath('descripcion', './/p/text()')
            yield item.load_item()
